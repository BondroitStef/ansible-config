server {
  listen 80;
  server_name .12urenloop.be;

  # this directory gets used by let's encrypt for validation
  location /.well-known/acme-challenge {
    root /var/www/letsencrypt;
    try_files $uri =404;
  }
  return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    server_name .12urenloop.be;

    root /home/urenloop/app/site/;

    ####################
    # SSL OPTIONS
    ####################
    ssl_certificate     /etc/letsencrypt/live/12urenloop.be/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/12urenloop.be/privkey.pem;

    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
    ssl_prefer_server_ciphers on;
    ssl_dhparam /etc/ssl/certs/dhparam.pem;
    ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-
    ssl_session_timeout 1d;
    ssl_session_cache shared:SSL:10m;
    ssl_stapling on;
    ssl_stapling_verify on;
    add_header Strict-Transport-Security max-age=15768000;


    index index.html index.htm;

    access_log /home/urenloop/log/access.log;
    error_log /home/urenloop/log/error.log;

    autoindex on;
}
